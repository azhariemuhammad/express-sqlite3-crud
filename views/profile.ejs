<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
</head>
<body>

  <h2>Welcome, ?</h2>

  <table border="1" cellpadding="5">
    <thead>
      <th>No</th>
      <th>Username</th>
      <th>Password</th>
      <th>Action</th>
    </thead>
    <% let j = 1
      for(let i = 0; i < data.length; i++){ %>
      <tbody>
        <td><%= j %></td>
        <td><%= data[i].username %></td>
        <td><%= data[i].password %></td>
        <td>
          <a href="/profile/edit/<%= data[i].id %>">Edit</a>
          <a href="/profile/delete/<%= data[i].id %>">Delete</a>
        </td>
      </tbody>
    <% j++ } %>
  </table>

  <form class="" action="/profile" method="post" style="margin-top:20px">
    <table>
      <tr>
        <td>Username</td>
        <td>
          <input type="text" name="user" value="">
        </td>
      </tr>
      <tr>
        <td>Password</td>
        <td>
          <input type="password" name="pass" value="">
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <input type="submit" name="" value="save">
        </td>
      </tr>
    </table>
  </form>

  <br>

  <a href="/"> << back to home </a>

</body>
</html>

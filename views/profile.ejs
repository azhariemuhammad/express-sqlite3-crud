<!DOCTYPE html>
<html>
<head>
  <title>PROFILE</title>
  <style>
    table{width:900px;border:1px solid #333;}
    table th{padding:5px;background: #ccc; text-align: left;}
    table td{padding:5px;}
  </style>
</head>
<body>
  <h1>PROFILE</h1>
  <table border="0" cellpadding="0" cellspacing="0">
    <tr>
      <th>ID</th>
      <th>ID Contact</th>
      <th>Username</th>
      <th>Password</th>
      <th>Contact Name</th>
      <th>&nbsp</th>
      <th>&nbsp</th>
    </tr>
    <% profile.forEach (i =>{%>
      <tr>
        <td>&nbsp<%= i.id %></td>
        <td>&nbsp<%= i.id_contact %></td>
        <td>&nbsp<%= i.username %></td>
        <td>&nbsp<%= i.password %></td>
        <td>&nbsp<%= i.name %></td>
        <td><a href="/profile/edit/<%= i.id %>">Edit</a></td>
        <td><a href="/profile/delete/<%= i.id %>">Delete</a></td>
      </tr>
      <% }) %>
  </table>
  <form action="/profile" method="post">
    <div>
      <label><b>Username<b></label><br>
      <input type="text" name="username" placeholder="your username">
    </div>
    <div>
      <label><b>Password<b></label><br>
      <input type="text" name="password" placeholder="your password">
    </div>
    <a href="/">Home</a>
    <button type="submit" name="submit">Add</button>
  </form>
</body>
</html>

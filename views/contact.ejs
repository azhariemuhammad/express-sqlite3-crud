<!DOCTYPE html>
<html>
<head>
  <title>CONTACT</title>
  <style>
    table{width:500px;border:1px solid #333;}
    table th{padding:5px;background: #ccc; text-align: left;}
    table td{padding:5px;}
  </style>
</head>
<body>
  <h1>CONTACT</h1>
  <table border="0" cellpadding="0" cellspacing="0">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Company</th>
      <th>Tlp. Number</th>
      <th>Email</th>
      <th>&nbsp</th>
      <th>&nbsp</th>
    </tr>
    <% contact.forEach (i =>{%>
      <tr>
        <td>&nbsp<%= i.id %></td>
        <td>&nbsp<%= i.name %></td>
        <td>&nbsp<%= i.company %></td>
        <td>&nbsp<%= i.tlp_number %></td>
        <td>&nbsp<%= i.email %></td>
        <td><a href="/contact/edit/<%= i.id %>">Edit</a></td>
        <td><a href="/contact/delete/<%= i.id %>">Delete</a></td>
      </tr>
      <% }) %>
  </table>
  <form action="/contact" method="post">
    <div>
      <label><b>Name<b></label><br>
      <input type="text" name="name" placeholder="your name">
    </div>
    <div>
      <label><b>Address<b></label><br>
      <input type="text" name="company" placeholder="your company">
    </div>
    <div>
      <label><b>Tlp Number<b></label><br>
      <input type="text" name="tlp_number" placeholder="your phone number">
    </div>
    <div>
      <label><b>Email<b></label><br>
      <input type="text" name="email" placeholder="your email">
    </div>
    <a href="/">Home</a>
    <button type="submit" name="submit">Add</button>
  </form>
</body>
</html>

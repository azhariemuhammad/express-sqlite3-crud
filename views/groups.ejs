<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups</title>
  </head>
  <body>
    <h1>List of Groups</h1>
    <a href="/">Return to Home</a><br><br>
    <table>
      <thead>
        <th>Id</th>
        <th>Groups</th>
        <th>Options</th>
      </thead>
      <tbody>
        <% data.forEach(rows=>{%>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.name%></td>
            <td>
              <a href="/groups/edit/<%=rows.id%>">Edit</a>
              <a href="#">|</a>
              <a onclick="return confirm('Are you sure to delete this data?')" href="/groups/delete/<%=rows.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table><br>
    <form class="" action="/groups" method="post">
      Name of Groups <br>
      <input type="text" name="name" placeholder="name of groups"><br><br>
      <button type="submit" name="button">Add Data</button>
    </form>
  </body>
</html>

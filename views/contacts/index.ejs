<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Express Contacts-Groups</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>

  <div class="container">

    <h1>Contacts</h1>

    <table class="table table-striped">

      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>

        <% for (let i = 0; i < contacts.length; i++) { %>

            <tr>
              <td><%= contacts[i].id %></td>
              <td><%= contacts[i].name %></td>
              <td><%= contacts[i].company %></td>
              <td><%= contacts[i].phone_number %></td>
              <td><%= contacts[i].email %></td>
              <td>
                <a href="/contacts/edit/<%= contacts[i].id %>" class="btn btn-sm btn-default">Edit</a>
                <a href="/contacts/delete/<%= contacts[i].id %>" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>

        <% } %>

      </tbody>

    </table>

    <hr>

    <h3>Add a contact</h3>
    <form action="/contacts" method="POST">

      <div class="row">
        <div class="col-md-6">

          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="form-control" required autofocus>
          </div>

          <div class="form-group">
            <label for="company">Company</label>
            <input type="text" name="company" id="company" class="form-control" required>
          </div>

          <div class="form-group">
            <label for="phone_number">Phone Number</label>
            <input type="text" name="phone_number" id="phone_number" class="form-control" required>
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" required>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>

        </div>
      </div>

    </form>

  </div>

</body>
</html>
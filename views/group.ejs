<!DOCTYPE html>
<html>
<head>
  <title>GROUP</title>
  <style>
    table{width:500px;border:1px solid #333;}
    table th{padding:5px;background: #ccc; text-align: left;}
    table td{padding:5px;}
  </style>
</head>
<body>
  <h1>GROUP</h1>
  <table border="0" cellpadding="0" cellspacing="0">
    <tr>
      <th>ID</th>
      <th>Group name</th>
      <th>&nbsp</th>
      <th>&nbsp</th>
    </tr>
    <% group.forEach (i =>{%>
      <tr>
        <td>&nbsp<%= i.id %></td>
        <td>&nbsp<%= i.names_of_groups %></td>
        <td><a href="/group/edit/<%= i.id %>">Edit</a></td>
        <td><a href="/group/delete/<%= i.id %>">Delete</a></td>
      </tr>
      <% }) %>
  </table>
  <form action="/group" method="post">
    <div>
      <label><b>Group name<b></label><br>
      <input type="text" name="names_of_groups" placeholder="group name">
    </div>
    <a href="/">Home</a>
    <button type="submit" name="submit">Add</button>
  </form>
</body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
  </head>
  <body>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>
      <% if (data.length > 0) { %>
        <% for (let i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].username %></td>
          <td><%= data[i].password %></td>
          <td>
            <a href="profiles/edit/<%= data[i].id %>">Edit</a> |
            <a onclick="return confirm('Are you sure?')" href="profiles/delete/<%= data[i].id %>">Delete</a>
          </td>
        </tr>
        <% } %>
      <% } else { %>
        <tr>
          <td colspan="4">No Record Available</td>
        </tr>
      <% } %>
    </table>
    <br>
    <h2>Add New profile</h2>
    <form action="/profiles" method="post">
      <table>
        <tr>
          <td>Username</td>
          <td>:</td>
          <td><input type="text" name="username" value=""></td>
        </tr>
        <tr>
          <td>Password</td>
          <td>:</td>
          <td><input type="text" name="password" value=""></td>
        </tr>
        <tr>
          <td colspan="3"><input type="submit" name="submit" value="Submit"></td>
        </tr>
      </table>
    </form>
  </body>
</html>

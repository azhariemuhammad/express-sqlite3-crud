<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>List Profiles</title>
</head>

<body>
  <a href="/">Back to main</a><br><br>
  <table style="width:50%" border="1px thin black">
    <tr>
      <th>id</th>
      <th>username</th>
      <th>password</th>

    </tr>
    <% for (let i=0 ; i < dataRows.length ; i++) {%>
      <tr>
        <td>
          <%=dataRows[i].id%>
        </td>
        <td>
          <%=dataRows[i].username%>
        </td>
        <td>
          <%=dataRows[i].password%>
        </td>


        <td>
          <a href="/profiles/edit/<%=dataRows[i].id%>">edit</a>
        </td>
        <td>
          <a href="/profiles/delete/<%=dataRows[i].id%>">delete</a>
        </td>
      </tr>
      <%}%>
  </table>


  <form action="/profiles" method="post">
    <input type="text" name="username" placeholder="Username"><br>
    <input type="text" name="password" placeholder="Password"><br>

    <input type="submit" value="Add Groups">
  </form>



</body>

</html>

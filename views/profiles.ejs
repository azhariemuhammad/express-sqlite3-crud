<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Profiles Data</title>
</head>

<body>
  <a href="/">back</a>
  <table style="width:50%" border='5'>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="2">Action</th>
    </tr>
    <%
      for(var i=0;i<dataRows.length;i++){
    %>
      <tr align="center">
        <td><%= dataRows[i].id %></td>
        <td><%= dataRows[i].username %></td>
        <td><%= dataRows[i].password %></td>
        <td><a href='/profiles/edit/<%= dataRows[i].id %>'>Edit</a></td>
        <td><a href="/profiles/delete/<%= dataRows[i].id %>">Delete</a></td>
      </tr>
    <%
    }
    %>
  </table>
  <br />
  <form action="/profiles" method="post">
    Username :<br>
    <input type="text" name="username" placeholder="Username">
    <br>
    Password :<br>
    <input type="text" name="password" placeholder="Password">
    <br>
    <input type="submit" value="Submit">
  </form>
  <br />
</body>

</html>
